{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="card my-5">
        <div class="card-body">

            <h1>Register</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}
            <div class="form-group my-3">
                {{ form_label(registrationForm.username, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group my-3">
                {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group my-3">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>


            {{ form_end(registrationForm) }}

        </div>
    </div>
{% endblock %}
